<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileKidsApp">

        <activity android:name="com.example.mobilekidsapp.ProfileCreator"/>
        <activity android:name="com.example.mobilekidsapp.ExistingProfile"/>
        <activity android:name="com.example.mobilekidsapp.SubjectSelection"/>
        <activity android:name="com.example.mobilekidsapp.AlphabetActivity"
            android:theme="@style/Theme.MobileKidsApp.AlphabetBar"
            android:label="Alphabet"/>
        <activity android:name="com.example.mobilekidsapp.CountingActivity"
            android:theme="@style/Theme.MobileKidsApp.CountingBar"
            android:label="Counting"/>
        <activity android:name="com.example.mobilekidsapp.MathActivity"
            android:theme="@style/Theme.MobileKidsApp.MathBar"
            android:label="Math"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>